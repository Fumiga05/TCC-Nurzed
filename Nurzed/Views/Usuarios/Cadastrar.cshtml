<script src="~/js/jquery.mask.js"></script>
<script>
    $(document).ready(function() {
        $('#rg').mask('00.000.000-00');
        $('#cep').mask('00000-000');
        $('#cpf').mask('000.000.000-00')
        $('#telefone').mask('(00) 00000-0000')
        $('#coren').mask('COREN-AA 000.000-AAAA')
        $('#data_nascimento').mask('00/00/0000')

    })
</script>

</html>