@model Nurzed.Models.Usuarios
@{
    ViewData["Title"] = "Cadastrar";
    IEnumerable<Universidade> listaUniversidade = ViewData["listaUniversidade"] as IEnumerable<Universidade>;
    IEnumerable<Curso> listaCurso = ViewData["listaCurso"] as IEnumerable<Curso>;
    IEnumerable<Especialidade> listaEspecialidade = ViewData["listaEspecialidade"] as IEnumerable<Especialidade>;
    IEnumerable<Cargo> listaCargo = ViewData["listaCargo"] as IEnumerable<Cargo>;
    IEnumerable<Area> listaArea = ViewData["listaArea"] as IEnumerable<Area>;

}

<link rel="stylesheet" href="~/css/cadastro.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<title>Cadastro</title>


<div class="contaner_titulo_index">
    <a asp-action="Voltar">
        <button class="btn_voltar_adm">
            <img src="~/img/voltar.png" alt="" class="img_btn_voltar">
        </button>
    </a>
</div>
<h1 class="titulo_pagina_adm">Adicionar usuário</h1>


<div id="area_selecao_user">
    <h3>Que tipo de usúario deseja adicionar ? </h3>

    <div class="opicao_area_selecao_user"><input type="radio" name="user" class="radio_opicao_area_selecao_user"> <p>Enfermeiro</p></div>
    <div class="opicao_area_selecao_user"><input type="radio" name="user" class="radio_opicao_area_selecao_user"> <p>Gestor</p></div>
    <div class="opicao_area_selecao_user"><input type="radio" name="user" class="radio_opicao_area_selecao_user"> <p>Administrador</p></div>
</div>

<form asp-action="Cadastrar">
<section id="sec_cadastro">

    <Label class="label_cadastro">Nome Completo: </Label><sup class="asteritico">*</sup><br>
    <input type="text" name="Nome" id="" class="caixa_texto" minlength="2" maxlength="100" required><br>

    <Label class="label_cadastro">Nome da mãe: </Label><sup class="asteritico">*</sup><br>
    <input type="text" name="" id="Nome_da_mae" class="caixa_texto" minlength="2" maxlength="100" required><br>


    <Label class="label_cadastro">Nome do pai: </Label><br>
    <input type="text" name="" id="Nome_do_pai" class="caixa_texto" minlength="2" maxlength="100" required>

    <div class="input2">
        <div id="v">
            <Label class="label_cadastro">Data de nascimento: </Label><sup class="asteritico">*</sup><br>
            <input type="date" name="Data_de_nascimento" id="data_nascimento" class="caixa_texto_mini" required>
        </div>

        <div>
            <Label class="label_cadastro">CPF: </Label><sup class="asteritico">*</sup><br>
            <input type="text" name="Cpf" id="cpf" class="caixa_texto_mini" minlength="14" maxlength="14" required>
        </div>
    </div>

    <div class="input2">
        <div id="v">
            <Label class="label_cadastro">Sexo: </Label><sup class="asteritico">*</sup><br>
            <select class="caixa_texto" name="Sexo">
                <option value="Masculino">Masculino</option>
                <option value="Feminino">Feminino</option>
            </select>
        </div>

        <div>
            <Label class="label_cadastro">RG: </Label><sup class="asteritico">*</sup><br>
            <input type="text" name="Rg" id="rg" class="caixa_texto_mini" minlength="12" maxlength="12" required>
        </div>
    </div>

    <div class="input2">
        <div id="v">
            <Label class="label_cadastro">CEP: </Label><sup class="asteritico">*</sup><br>
            <input type="text" name="Cep" id="cep" class="caixa_texto_mini" minlength="9" maxlength="9" required>
        </div>

        <div>
            <Label class="label_cadastro">Telefone: </Label><sup class="asteritico">*</sup><br>
            <input type="text" name="Telefone" id="telefone" class="caixa_texto_mini" minlength="14" maxlength="14" required>
        </div>
    </div>

    <hr class="linha_cadastro">

    <Label class="label_cadastro"> Curso:</Label><sup class="asteritico">*</sup><br>
    <select class="caixa_texto" name="Curso">
        <option>--Escolha um curso--</option>
        @foreach (var item in listaCurso)
        {
            <option value="@item.Id">@item.Nome </option>
        }
    </select>
    <br>

    <Label class="label_cadastro">Universidade:</Label><sup class="asteritico">*</sup><br>
    <select class="caixa_texto" name="Universidade">
        <option>--Escolha uma Universidade--</option>
        @foreach (var item in listaUniversidade)
        {
            <option value="@item.Id">@item.Nome (@item.Sigla) </option>
        }
    </select>
    <br>

    <div class="input2">
        <div id="v">
            <Label class="label_cadastro">Data de início universidade: </Label><sup class="asteritico">*</sup><br>
            <input type="date" name="" id="uni_inicio" class="caixa_texto_mini" minlength="8" required>
        </div>

        <div>
            <Label class="label_cadastro">Data término universidade: </Label><sup class="asteritico">*</sup><br>
            <input type="date" name="" id="uni_fim" class="caixa_texto_mini" required>
        </div>
    </div>

    <hr class="linha_cadastro">

    <Label class="label_cadastro">Cargo:</Label><sup class="asteritico">*</sup><br>
    <select class="caixa_texto" name="Cargo">
        <option>--Escolha um cargo--</option>
        @foreach (var item in listaCargo)
        {
            <option value="@item.Id">@item.Nome </option>
        }
    </select>
    <br>

    <Label class="label_cadastro">Área:</Label><sup class="asteritico">*</sup><br>
    <select class="caixa_texto" name="Area">
        <option>--Escolha uma area--</option>
        @foreach (var item in listaArea)
        {
            <option value="@item.Id">@item.Nome </option>
        }
    </select>
    <br>

    <Label class="label_cadastro">Especialidade:</Label><sup class="asteritico">*</sup><br>
    <select class="caixa_texto" name="Especialidade">
        <option>--Escolha uma especialidade--</option>
        @foreach (var item in listaEspecialidade)
        {
            <option value="@item.Id">@item.Nome </option>
        }
    </select>
    <br>

    <Label class="label_cadastro">Tipo de contrato:</Label><sup class="asteritico">*</sup><br>
    <select class="caixa_texto" name="Tipo_de_contrato">
        <option>--Escolha uma opção--</option>
        <option asp-for="Tipo_de_contrato" value="Terceirizado">Terceirizado</option>
        <option asp-for="Tipo_de_contrato" value="Concursado">Concursado</option>
    </select>
    <br>

    <div class="input2">
        <div id="v">
            <Label class="label_cadastro">COREN: </Label><sup class="asteritico">*</sup><br>
            <input type="text" name="Coren" id="coren" class="caixa_texto_mini" minlength="2" maxlength="250" required>
        </div>

        <div>
            <Label class="label_cadastro">Matrícula: </Label><sup class="asteritico">*</sup><br>
            <input type="number" name="Matricula" id="" class="caixa_texto_mini" minlength="9" maxlength="9" required>
        </div>
    </div>

    <div class="input2">
        <div id="v">
            <Label class="label_cadastro">Senha: </Label><sup class="asteritico">*</sup><br>
            <input type="password" name="Senha" id="" class="caixa_texto_mini" minlength="8" maxlength="40" required>
        </div>

    </div>

</section>

<div id="btn_final_cadastro_adm">
    <button class="btn_Finalizar_adm" type="submit" data-bs-target="#staticBackdrop" onclick="ValidarCPF()">Finalizar</button>
    <br>
    <p id="ganbiara">Clicke 2x para finalizar</p>
    <br><br>
    <button class="btn_Deletar_adm" data-toggle="modal" data-target="#meuModal">Deletar</button>
    <br>
</div>
</form>



<!-- Modal 1-->

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="div_btn_fechar">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="texto_moldal">
                    Tem certeza que deseja
                    finalizar?
                </p>
            </div>
            <div class="moldal_btns">
                <button type="button" class="btn_nao_moldal" data-bs-dismiss="modal">Não</button>
                <button type="button" class="btn_sim_moldal" data-bs-dismiss="modal">Sim</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal 2-->
<div id="meuModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content aux20">
            <div>
                <div class="modal-body">
                    <p class="texto_moldal2">Tem certeza que deseja <p id="destaque_red">DELETAR ?</p> </p>
                </div>
            </div>
            <div class="moldal_btns">
                <button type="button" class="btn_nao_moldal" data-dismiss="modal">Não</button>
                <button type="button" class="btn_sim_moldal" data-dismiss="modal">Sim</button>
            </div>
        </div>
    </div>
</div>








