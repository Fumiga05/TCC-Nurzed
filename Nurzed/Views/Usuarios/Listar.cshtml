@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@model IEnumerable<Nurzed.Models.Usuarios>

@{
    ViewData["Title"] = "Listar";
    Usuarios u = JsonConvert.DeserializeObject<Usuarios>(Context.Session.GetString("usuarios"));
    //Usuarios2 usuriarios2 = JsonConvert.DeserializeObject<Usuarios2>(Context.Session.GetString("usuarios2"));

}

<script src="https://code.jquery.com/jquery-3.1.1.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.quicksearch/2.3.1/jquery.quicksearch.js"></script>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">


<h1>Listar</h1>
<p>@u.Nome</p>

<p>
    <a asp-action="Create">Create New</a>
</p>

    <div class="form-group input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
        <input name="consulta" id="txt_consulta" placeholder="Consultar" type="text" class="form-control">
        </div>
<table class="table" id="tabela">
    <thead>
        <tr>
            <th>
                Status
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>          
            
            <th>
                CPF
            </th>
           
            
            <th>
                Especialidade
            </th>
            <th>
                Cargo
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Status1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
  
            <td>
                @Html.DisplayFor(modelItem => item.Id_Especialidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Cargo)
            </td>

            <td>
                @Html.ActionLink("Editar", "Editar", new { cpf = item.Cpf }) |
                @Html.ActionLink("Ativar", "Ativar", new { cpf = item.Cpf }) |
                @Html.ActionLink("Inativar", "Inativar", new { cpf = item.Cpf })
            </td>
        </tr>
        
}
    </tbody>
</table>

<script>




    $('input#txt_consulta').quicksearch('table#tabela tbody tr');
</script>